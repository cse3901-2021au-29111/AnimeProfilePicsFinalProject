<h1>Edit Student</h1>

<%=form_with(model: @student, url: "/student/" + @student.id.to_s, local: true, method: "put") do |form| %>
  
         

    <div>
      <%= form.label :fname%><br>
      <%= form.text_field :fname, class: "form-control" %>
    </div>

    <div>
      <%= form.label :lname%><br>
      <%= form.text_field :lname, class: "form-control" %>
    </div>
    
    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email,  class: "form-control" %>
    </div>
       <div>
      <%= form.label :password %> <br>
      <%= form.password_field :password , class: "form-control"%>
    </div>


    <div>
      <%= form.label :password_confirmation, "Confirmation" %> <br>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div>
    <%= form.label :buckId %> <br>
    <%= form.text_field :buckId , class: "form-control"%>
    </div>

    <br>
    <div>
      <%= form.submit "Update" %>
    </div>
<% end %>
