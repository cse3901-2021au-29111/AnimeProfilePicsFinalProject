
<% provide(:title, "Log in") %>
<h1>Log in</h1>
<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
    <p><%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %></p>
    <p><%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %></p>
    <p><%= f.submit "Log in"%></p>
    <% end %>   
        
    <p>New user? <%= link_to "Sign up now!", student_newStd_path %></p>

    